@model List<TbSalesInvoice>

<h2>My Orders</h2>

@if (Model == null || !Model.Any())
{
    <p>You have no orders yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Total Items</th>
                <th>Delivery Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.InvoiceId</td>
                    <td>@order.InvoiceDate.ToString("yyyy-MM-dd")</td>
                    <td>@order.TbSalesInvoiceItems.Count</td>
                    <td>@order.DelivryDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="@Url.Action("OrderDetails", "Order", new { id = order.InvoiceId })" class="btn btn-primary">
                            View Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}